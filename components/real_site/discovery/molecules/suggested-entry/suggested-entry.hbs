<article class="suggested-entry">
  <a class="wrapper-link" href="">
    <img class="thumbnail" src="{{imageSmall}}" data-src="{{imageLarge}}">
    <h1 class="title">{{title}}</h1>

    <div class="byline">
      By
      <address>
        <ul class="authors">
          {{#each authors}}
            <li class="author">{{this}}</li>
          {{/each}}
        </ul>
      </address>
    </div>

    <p class="publication-date">
      <time>{{timestamp}}</time>
    </p>
  </a>
</article>
